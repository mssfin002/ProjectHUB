@model ProjectHUB.Models.TopicModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";

    
}

<style>
    body {
        background: white;
        align-content: center;
    }

    input {
        width: 75%;
        text-align: center;
    }

    img {
        text-align: center;
    }

    h2 {
        color: black;
        font-family: Arial, Helvetica, sans-serif;
        font-size: 27px;
    }

    .row {
        align-content: center;
        text-align: center;
    }


    .card {
        text-align: center;
        background-color: lightsteelblue;
        padding: 2.5%;
        align-items: center;
    }

    .form-group
    {
        width : 65%;
        text-align : center;
    }

</style>


<body>
    <div class="card">
        <h1><b>Create a topic</b></h1>
        <hr />
        <div class="row">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ShortTitle" class="control-label"></label>
                    <input asp-for="ShortTitle" class="form-control" />
                    <span asp-validation-for="ShortTitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                @if(User.IsInRole("Mentor"))
                {
                    <div class="form-group">
                        <label asp-for="Approved" class="control-label"></label>
                        <input asp-for="Approved" class="form-control" />
                        <span asp-validation-for="Approved" class="text-danger"></span>
                    </div>
                }
                <div class="form-group">
                    <label asp-for="SurnamesOfStaffWorkingOnThis" class="control-label"></label>
                    <input asp-for="SurnamesOfStaffWorkingOnThis" class="form-control" />
                    <span asp-validation-for="SurnamesOfStaffWorkingOnThis" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ExternalCollaborators" class="control-label"></label>
                    <input asp-for="ExternalCollaborators" class="form-control" />
                    <span asp-validation-for="ExternalCollaborators" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FundingDetails" class="control-label"></label>
                    <input asp-for="FundingDetails" class="form-control" />
                    <span asp-validation-for="FundingDetails" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RepresentativeResearchOutput" class="control-label"></label>
                    <input asp-for="RepresentativeResearchOutput" class="form-control" />
                    <span asp-validation-for="RepresentativeResearchOutput" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MentorContact" class="control-label"></label>
                    <input asp-for="MentorContact" class="form-control" value="@User.Identity.Name" />
                    <span asp-validation-for="MentorContact" class="text-danger"></span>
                </div><br />
                <div class="form-group">
                    <label asp-for="aokShortTitle" class="control-label"></label>
                    <input asp-for="aokShortTitle" class="form-control" />
                    <span asp-validation-for="aokShortTitle" class="text-danger"></span>
                </div><br />
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
            <div>
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
    <img src="~/HorizontalLog.png" class="img-fluid" alt="HorizontalLogo" height="80" width="500" />
</body>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
