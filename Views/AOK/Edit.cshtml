@model ProjectHUB.Models.AOKModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background: white;
    }
    h1 {
        color: black;
        font-family: Arial, Helvetica, sans-serif;
        font-size: 48px;
    }
    .card {
        text-align: center;
        background-color: lightsteelblue;
        padding: 2.5%;
    }

    .form-floating {
        width: 50%;
        text-align: center;
        align-items: center;
    }

    input {
        text-align: center;
    }
</style>

<body>
    <div class="row">
        <div class="card">
            <h1><b>Edit @Model.ShortTitle</b></h1>
            <hr />
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="ShortTitle" class="control-label"></label><br />
                    <input asp-for="ShortTitle" class="form-control" />
                    <span asp-validation-for="ShortTitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ExpertContact" class="control-label"></label><br />
                    <input asp-for="ExpertContact" class="form-control" />
                    <span asp-validation-for="ExpertContact" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" /> |
                    <a asp-action="Index">Back to List</a>
                </div>
            </form>
        </div>
    </div>

    <center>
        <img src="~/HorizontalLog.png" class="img-fluid" alt="HorizontalLogo" height="80" width="500" />
    </center>
</body>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
