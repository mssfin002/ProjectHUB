@model ProjectHUB.Models.AOKModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background: white;
    }

    h1 {
        color: black;
        font-family: Arial, Helvetica, sans-serif;
        font-size: 48px;
    }

    .card {
        text-align: center;
        background-color: lightsteelblue;
        padding: 2.5%;
    }

    .form-floating {
        width: 50%;
        text-align: center;
        align-items: center;
    }
</style>


<body>
    <div class="row">
        <div class="card">
            <h1><b>Delete @Model.ShortTitle</b></h1>
            <hr />
            <div class="form-group">
                <div class="col">
                    <b>@Html.DisplayNameFor(model => model.Id)</b> :
                    @Html.DisplayFor(model => model.Id)
                </div>
                <div class="col">
                    <b>@Html.DisplayNameFor(model => model.ShortTitle)</b> :
                    @Html.DisplayFor(model => model.ShortTitle)
                </div>
                <div class="col">
                    <b>@Html.DisplayNameFor(model => model.ThemeShortTitle)</b> :
                    @Html.DisplayFor(model => model.ThemeShortTitle)
                </div><br />
            </div>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index">Back to List</a>
            </form>
        </div>
    </div>
    <center>
        <img src="~/HorizontalLog.png" class="img-fluid" alt="HorizontalLogo" height="80" width="500" />
    </center>
</body>
