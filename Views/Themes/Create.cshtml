@model ProjectHUB.Models.ThemeModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    body {
        background: white;
        align-content: center;
    }

    input {
        width : 75%
    }

    h2 {
        color: black;
        font-family: Arial, Helvetica, sans-serif;
        font-size: 27px;
    }

    .row {
        align-content: center;
        text-align: center;
    }


    .card {
        text-align: center;
        background-color: lightsteelblue;
        padding: 2.5%;
        align-items : center;
    }

    input {
        text-align : center;
    }

</style>

<body>
    <div class="card">
        <h2><b>Create a theme</b></h2>
        <hr />
        <div class="row">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group col-xl-27">
                    <label asp-for="ShortTitle" class="control-label"></label><br />
                    <input asp-for="ShortTitle" class="form-control" />
                    <span asp-validation-for="ShortTitle" class="text-danger"></span>
                </div><br />
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />|
                    <a asp-action="Index">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</body>
<img src="~/HorizontalLog.png" class="img-fluid" alt="HorizontalLogo" height="80" width="500" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
