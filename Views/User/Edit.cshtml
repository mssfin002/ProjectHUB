@model ProjectHUB.Models.ViewModels.EditUserViewModel
@{
}

<style>
    body {
        background: white;
    }

    .column {
        width: 50%;
        text-align: center;
    }

    /* Clear floats after the columns */
    .row:after {
        content: "";
        display: table;
        clear: both;
        text-align: right;
        border: 2px;
    }

    h1 {
        color: black;
        font-family: Arial, Helvetica, sans-serif;
        font-size: 48px;
    }

    h2 {
        color: black;
        font-family: Arial, Helvetica, sans-serif;
        font-size: 27px;
    }

    h3 {
        color: black;
        font-family: Arial, Helvetica, sans-serif;
        font-size: 16px;
    }

    .card {
        text-align: center;
        background-color: lightsteelblue;
        padding: 2.5%;
    }

    .form-floating {
        width: 50%;
        text-align: center;
        align-items: center;
    }

    input {
        text-align : center;
    }
</style>

<body>
<div class="card">
        <h1>Edit User</h1>

        @using (Html.BeginForm("OnPost", "User"))
        {
            @Html.HiddenFor(h => Model.User.Id)
            <div class="row g-3">
                <label asp-for="@Model.User.FirstName" class="form-label"></label>
                <input asp-for="@Model.User.FirstName" class="form-control" autocomplete="username" aria-required="true" readonly />
                <span asp-validation-for="@Model.User.FirstName" class="text-danger">
                </span>
            </div>
            <div class="row g-3">
                <label asp-for="@Model.User.LastName" class="form-label"></label>
                <input asp-for="@Model.User.LastName" class="form-control" autocomplete="username" aria-required="true" readonly />
                <span asp-validation-for="@Model.User.LastName" class="text-danger">
                </span>
            </div>
            <div class="row g-3">
                <label asp-for="@Model.User.StudentNumber" class="form-label"></label>
                <input asp-for="@Model.User.StudentNumber" class="form-control" autocomplete="username" aria-required="true" readonly/>
                <span asp-validation-for="@Model.User.StudentNumber" class="text-danger">
                </span>
            </div>
            <div class="row g-3">
                <label asp-for="@Model.User.Email" class="form-label"></label>
                <input asp-for="@Model.User.Email" class="form-control" autocomplete="username" aria-required="true" readonly />
                <span asp-validation-for="@Model.User.Email" class="text-danger">
                </span>
            </div>

            <hr class="my-4">
            <h3 class="mb-3">Roles</h3>
            <div class="my-3">
                @for (int i = 0; i < Model.Roles.Count(); i++)
                {
                    <div class="form-check">
                        @Html.CheckBoxFor(c => Model.Roles[i].Selected)
                        @Html.HiddenFor(h => Model.Roles[i].Value)

                        @Html.LabelFor(lbl => Model.Roles[i].Selected, Model.Roles[i].Text, new {@class= "form-check-label"})
                        @Html.HiddenFor(h => Model.Roles[i].Text)
                    </div>
                }
            </div>
            <hr class="my-4">

            <button class="w-100 btn btn-primary btn-lg" type="submit">Save</button>
            <br />
        }
</div>
</body>